<h1>Let's find and replace!</h1>

<form action="/adjusted">
  <div class="form-group">
    <label for="phrase">Target phrase:</label>
    <input id="phrase" name="phrase" class="form-control" type="text">
  </div>
  <div class="form-group">
    <label for="target">Replace this:</label>
    <input id="target" name="target" class="form-control" type="text">
    <label for="substitute">With this:</label>
    <input id="substitute" name="substitute" class="form-control" type="text">
  </div>
  <button type="submit" class="btn-success">Swap!</button>
</form>
